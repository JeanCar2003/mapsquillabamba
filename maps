/* styles.css */

/* Estilo general para el contenedor del mapa */
body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}

h1 {
  text-align: center;
  margin-top: 20px;
  color: #333;
}

/* Estilo para el mapa */
gmp-map {
  width: 100%;
  height: 80vh; /* Ajusta la altura del mapa */
  border: 2px solid #ccc; /* Bordes alrededor del mapa */
  border-radius: 8px; /* Bordes redondeados */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra sutil */
}

/* Estilo para los marcadores */
.marker {
  position: relative;
  width: 24px; /* Ancho del marcador */
  height: 24px; /* Altura del marcador */
  border-radius: 50%; /* Bordes redondeados */
  background-color: #FF5733; /* Color original para la mayoría de los marcadores */
  display: flex; /* Flexbox para centrar el contenido */
  align-items: center; /* Centrado vertical */
  justify-content: center; /* Centrado horizontal */
  transition: transform 0.2s; /* Animación de transición */
}

.marker:hover {
  transform: scale(1.2); /* Efecto de aumento al pasar el mouse */
}

.marker-number {
  font-size: 10px; /* Tamaño de la fuente para el número */
  color: #ffffff; /* Color del número */
  font-weight: bold; /* Negrita para el número */
}

.marker-green {
  background-color: #28a745; /* Color verde para el marcador especial */
}
